package com.smartfoodhcmut.controller.admin.api;

import java.io.IOException;
import java.io.InputStream;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.ResourceBundle;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.MultipartConfig;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.Part;

@WebServlet("/ThumbnailUpload")
@MultipartConfig(fileSizeThreshold = 1024 * 1024 * 2,
			maxFileSize = 1024 * 1024 * 10,
			maxRequestSize = 1024 * 1024 * 50)

public class ThumbnailUpload extends HttpServlet {
	
	private static final long serialVersionUID = 1L;
	
	@Override
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		try {
			Connection conn = getConnection();
			conn.setAutoCommit(false);
			Part part = request.getPart("thumbnail");
			String fileName = extractFileName(part);
			if (fileName != null && fileName.length() > 0) {
				InputStream is = part.getInputStream();
				this.writeToDB(conn, is);
			}
			conn.commit();
		} catch (Exception e) {
			e.printStackTrace();
		} 
		RequestDispatcher rd = request.getRequestDispatcher("/views/admin/foods/list.jsp");
		rd.forward(request, response);
	}

	private String extractFileName(Part part) {
		String contentDisp = part.getHeader("content-disposition");
		String[] items = contentDisp.split(";");
		for (String s : items) {
			if (s.trim().startsWith("filename")) {
				String clientFileName = s.substring(s.indexOf("=") + 2, s.length() - 1);
	            clientFileName = clientFileName.replace("\\", "/");
	            int i = clientFileName.lastIndexOf('/');
	            return clientFileName.substring(i + 1);
			}
		}
		return null;
	}
	private void writeToDB(Connection conn, InputStream is) throws SQLException {
		String sql = "UPDATE foods SET thumbnail = ? ORDER BY id DESC LIMIT 1";
		PreparedStatement ps = conn.prepareStatement(sql);
		ps.setBlob(1, is);
		ps.executeUpdate();
	}
}
